@model AccountVM
@{
    ViewData["Title"] = "ResetPassword";
}
<div class="container">
    <div class="row">
        <h2>Reset password</h2>
        <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
        <form method="post">
            <div class="mt-3 d-none">
                <input asp-for="Token" class="form-control" />
                <input asp-for="AppUser.Email" class="form-control" />
            </div>
            <div class="mt-3">
                <label asp-for="Password">Please enter your new password</label>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="mt-3">
                <label asp-for="ConfirmPassword">Confirm Passweord</label>
                <input asp-for="ConfirmPassword" class="form-control" />
            </div>
            <button type="submit" class="btn btn-outline-primary mt-3">Send</button>
        </form>
    </div>
</div>
